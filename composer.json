{
	"description": "A bot that posts pictures from the German Weather Service (DWD) webcams.",
	"homepage": "https://github.com/php-tootbot/dwd-webcam",
	"license": "MIT",
	"type": "project",
	"authors": [
		{
			"name": "smiley",
			"email": "smiley@chillerlan.net",
			"homepage": "https://github.com/codemasher"
		},
		{
			"name": "Contributors",
			"homepage":"https://github.com/php-tootbot/dwd-webcam/graphs/contributors"
		}
	],
	"funding": [
		{
			"type": "Ko-Fi",
			"url": "https://ko-fi.com/codemasher"
		}
	],
	"minimum-stability": "stable",
	"prefer-stable": true,
	"require": {
		"php": "^8.2",
		"chillerlan/php-settings-container": "^3.2",
		"php-tootbot/php-tootbot": "^1.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^11.1",
		"phan/phan": "^5.4"
	},
	"autoload": {
		"psr-4": {
			"PHPTootBot\\DWDWebcamBot\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"PHPTootBot\\DWDWebcamBotTest\\": "tests"
		}
	},
	"scripts": {
		"phpunit": "@php vendor/bin/phpunit",
		"phan": "@php vendor/bin/phan"
	},
	"config": {
		"lock": true,
		"sort-packages": true,
		"platform-check": true
	}
}
